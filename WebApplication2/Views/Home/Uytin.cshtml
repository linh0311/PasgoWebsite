@model IEnumerable<WebApplication2.Models.AnUongSP_Result>
@using WebApplication2.CustomHtmlHelper;
@{
    Layout = null;
    int x = 0;
}

<section class="wapper">
    <div class="wapcontent">
        <div class="row">
            <div class="col-md-12 col-12 no-padding mobile">
                <span class="mobile-header" style="margin-bottom: 0; float: left;"> <h1>Nhà hàng uy tín</h1></span>
                <span class="mobile-header-more" style="float: right;"> <a href="https://pasgo.vn/ha-noi/bo-suu-tap">Xem tất cả</a><span class="pasgo-icondesktop-menured"></span></span>
            </div>

            <div class="col-md-12 col-12 no-padding pc">
                <a href="https://pasgo.vn/ha-noi/nha-hang-uy-tin"><h1>Nhà hàng uy tín<span class="pasgo-icondesktop-menublack"></span></h1></a>
            </div>
        </div>
        <div class="col-12 col-md-12 no-padding">
            <div id="pasgo-carousel-menu-2" class="carousel slide" data-ride="carousel" data-interval="2000">
                <div class="carousel-inner" role="listbox">
                    @for (int i = 0; i < (Model.Count() / 4); i++)
                    {
                        if (x == 0)
                        {
                            <div class="carousel-item active">
                                @for (int j = 0; j < 4; j++)
                                {
                                    @Html.CarouselRating(Model.ElementAt(x).RName, Model.ElementAt(x).Raddress, Model.ElementAt(x).Rlink, Model.ElementAt(x).Rstar, Model.ElementAt(x).Rdollar, Model.ElementAt(x).Rpromotion, Model.ElementAt(x).Rfeature, Model.ElementAt(x).imgLink, Model.ElementAt(x).PasgoRID)
                                    x++;
                                }
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                @for (int j = 0; j < 4; j++)
                                {
                                    @Html.CarouselRating(Model.ElementAt(x).RName, Model.ElementAt(x).Raddress, Model.ElementAt(x).Rlink, Model.ElementAt(x).Rstar, Model.ElementAt(x).Rdollar, Model.ElementAt(x).Rpromotion, Model.ElementAt(x).Rfeature, Model.ElementAt(x).imgLink, Model.ElementAt(x).PasgoRID)
                                    x++;
                                }
                            </div>
                        }
                    }
                </div>
                <a class="carousel-control-prev next-prev" href="#pasgo-carousel-menu-2" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" style="filter: invert(75%);" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next next-prev" href="#pasgo-carousel-menu-2" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" style="filter: invert(75%);" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-md-12 col-12 end-wapper">
            <a href="https://pasgo.vn/ha-noi/bo-suu-tap">Xem tất cả<span class="pasgo-icondesktop-menured"></span></a>
        </div>
    </div>
</section>