@model WebApplication2.Models.PasgoUser

@{
    ViewBag.Title = "Đăng ký thành viên";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

    <div class="wapper-content" id="login">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="container">
                <div class="wapper col-lg-8 col-md-8 col-sm-10 col-12">
                    <div class="row">
                        <h1 style="margin-left: calc(50% - 241px)">ĐĂNG KÝ THÀNH VIÊN PASGO HOÀN TOÀN MIỄN PHÍ</h1>
                    </div>

                    <label class="field-validation-error">@TempData["Failed"]</label>
                    <label class="field-validation-error" style="color: forestgreen !important">@TempData["Success"]</label>
                    <div class="col-12">
                        <!--<input class="col-12" type="text" name="" placeholder="Họ và Tên *" required>-->

                        @Html.TextBoxFor(model => model.FullName, new { @class = "col-12", @placeholder = "Họ và Tên *", @autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.FullName, null, new { @class = "col-12" })
                        <span class="col-2">Quốc gia</span>
                        <select class="col-10">
                            <option value="">Vietnam(+84)</option>
                        </select>
                        <span class="col-2">Tỉnh</span>
                        <select class="col-10">
                            <option value="1">Hà Nội</option>
                            <option value="2">TP. HCM</option>
                            <option value="4">Đà Nẵng</option>
                            <option value="5">Khánh Hòa</option>
                        </select>

                        @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "col-12", @placeholder = "Số điện thoại *", @type = "tel", @autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.PhoneNumber, null, new { @class = "col-12" })

                        @Html.TextBoxFor(model => model.Password, new { @class = "col-12", @placeholder = "Mật khẩu *", @type = "password", @autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.Password, null, new { @class = "col-12" })

                        @Html.TextBoxFor(model => model.RetypePassword, new { @class = "col-12", @placeholder = "Nhập lại mật khẩu *", @type = "password", @autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.RetypePassword, null, new { @class = "col-12" })

                        @Html.TextBoxFor(model => model.Email, new { @class = "col-12", @placeholder = "Email *", @type = "email", @autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.Email, null, new { @class = "col-12" })

                        @Html.Hidden("NewPassword", "0")
                        @Html.Hidden("RetypeNewPassword", "0")
                        <!--
        <input class="col-12" type="tel" name="" placeholder="Số điện thoại *" required>
        <input class="col-12" type="password" name="" placeholder="Mật khẩu *" required>
        <input class="col-12" type="password" name="" placeholder="Xác nhận mật khẩu*" required>
        <input class="col-12" type="Email" name="" placeholder="Email">
            -->
                        <p class="col-lg-2 col-md-2 col-sm-3 col-3" style="margin-top: 5px;">Giới tính</p>
                        @Html.RadioButtonFor(model => model.Gender_, "False", new { @id = "male" })
                        @Html.Label("Nam")
                        @Html.RadioButtonFor(model => model.Gender_, "True", new { @id = "female" })
                        @Html.Label("Nữ")
                        <br />
                        <!--

        <input class="radiobtn" type="radio" name="gender" value="0" id="male">Nam
        <input class="radiobtn" type="radio" name="gender" value="1" id="female">Nữ-->

                        <div class="col-12">
                            <input class="checkbox" type="checkbox" name="policy" id="policy"><label>Tôi đồng ý với các &nbsp;<a href="https://pasgo.vn/quy-dinh">Điều khoản sử dụng</a>&nbsp;của PasGo</label>
                        </div>

                        <div class="col-12 no-padding">
                            <input type="submit" value="Đăng ký" class="submit" />
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

